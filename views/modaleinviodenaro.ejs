<!-- Modale per invio denaro -->
<!-- classe comparsa moadale fade e  focus modale  e la schermata vera e propria -->
<div class="modal fade" id="modaleInvioDenaro" tabindex="-1">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Invia Denaro</h5>
        <button
          type="button"
          class="btn-close"
          data-bs-dismiss="modal"
        ></button>
      </div>
      <!-- il form per raccogliere  destinatario importo e  importo cateogria -->
      <div class="modal-body">
        <form id="formInvioDenaro">
          <div class="mb-3">
            <label for="destinatarioInvio" class="form-label"
              >Destinatario(nr. conto)</label
            >
            <input
              type="text"
              class="form-control"
              id="destinatarioInvio"
              placeholder="Inserisci l'id del conto destinatario"
              required
            />
          </div>
          <div class="mb-3">
            <label for="importoInvio" class="form-label">importo (â‚¬)</label>
            <input
              type="number"
              step="0.01"
              class="form-control"
              id="importoInvio"
              required
            />
          </div>
          <div class="mb-3">
            <label for="categoriaInvio" class="form-label">Categoria</label>
            <select class="form-select" id="categoriaInvio" required>
              <option value="">Seleziona...</option>
              <option value="Regali e Donazioni">Regali e Donazioni</option>
              <option value="Quota generica">Quota generica</option>
              <option value="Quota risorante">Quota risorante</option>
              <option value="Quota Regalo">Quota Regalo</option>
              <option value="Quota Vacanza">Quota Vacanza</option>
              <option value="Affitto">Affitto</option>
              <option value="Altro">Altro</option>
            </select>
          </div>
          <div class="modal-footer">
            <button type="submit" class="btn btn-primary">Conferma</button>
            <button
              type="button"
              class="btn btn-secondary"
              data-bs-dismiss="modal"
            >
              Annulla
            </button>
          </div>
        </form>
      </div>
    </div>
  </div>
</div>
